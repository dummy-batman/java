import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

// 1. Implement KeyListener
class MyKeyHandler implements KeyListener {

    // 2. You MUST write all 3 methods (Standard Rule)
    public void keyPressed(KeyEvent e) {
        System.out.println("Key Pressed");
    }

    public void keyReleased(KeyEvent e) {
         // You can leave this empty, but it MUST be here
    }

    public void keyTyped(KeyEvent e) {
         // You can leave this empty, but it MUST be here
    }
}

public class Main {
    public static void main(String[] args) {
        JFrame frame = new JFrame();
        JTextField textField = new JTextField(20); // Source is usually a TextField

        // 3. Register the Listener
        // Note: It is addKEYListener, not addACTIONListener
        textField.addKeyListener(new MyKeyHandler());

        frame.add(textField);
        frame.setSize(300, 200);
        frame.setVisible(true);
    }
}
