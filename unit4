import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

// 1. Implement MouseListener
class MyMouseHandler implements MouseListener {

    // 2. YOU MUST WRITE ALL 5 METHODS
    public void mouseClicked(MouseEvent e) {
        System.out.println("Mouse Clicked at X: " + e.getX() + " Y: " + e.getY());
    }

    public void mouseEntered(MouseEvent e) {
        System.out.println("Mouse Entered the area");
    }

    public void mouseExited(MouseEvent e) {
        System.out.println("Mouse Left the area");
    }

    public void mousePressed(MouseEvent e) {
        // Must be present, even if empty
    }

    public void mouseReleased(MouseEvent e) {
        // Must be present, even if empty
    }
}

public class Main {
    public static void main(String[] args) {
        JFrame frame = new JFrame();
        JButton btn = new JButton("Hover or Click Me");

        // 3. Register the Listener
        btn.addMouseListener(new MyMouseHandler());

        frame.add(btn);
        frame.setSize(300, 300);
        frame.setVisible(true);
    }
}
----------------------------------------------------------------------
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class MouseTracker extends JFrame implements MouseMotionListener {

    JLabel label;

    MouseTracker() {
        // Setup the Frame
        setSize(400, 400);
        setLayout(new FlowLayout());

        label = new JLabel("Move the mouse...");
        add(label);

        // Register THIS class as the listener
        addMouseMotionListener(this);

        setVisible(true);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    }

    // METHOD 1: Handles Moving (No button pressed)
    public void mouseMoved(MouseEvent e) {
        int x = e.getX();
        int y = e.getY();
        label.setText("Mouse is at: " + x + ", " + y);
    }

    // METHOD 2: Handles Dragging (Button pressed + Moving)
    public void mouseDragged(MouseEvent e) {
        label.setText("Dragging at: " + e.getX() + ", " + e.getY());
    }

    public static void main(String[] args) {
        new MouseTracker();
    }
}


















