import java.awt.event.*;
import javax.swing.*;

class MyButtonHandler implements ActionListener {
    // 3. THE LISTENER (The Logic)
    public void actionPerformed(ActionEvent e) {
        System.out.println("Button was clicked!");
    }
}

public class Main {
    public static void main(String[] args) {
        // 1. THE SOURCE (The Component)
        JButton btn = new JButton("Click Me");

        // 2. THE DELEGATION (Registering the Listener)
        // This line tells the button: "Delegate your clicks to MyButtonHandler"
        btn.addActionListener(new MyButtonHandler());
    }
}
